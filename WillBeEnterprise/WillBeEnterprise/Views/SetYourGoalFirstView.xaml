<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:WillBeEnterprise.Extensions"
             xmlns:customView ="clr-namespace:WillBeEnterprise.Views.Custom"
             Title="{extensions:Translate SetGoal}"
             xmlns:flex="clr-namespace:Flex.Controls;assembly=Flex"
             x:Class="WillBeEnterprise.Views.SetYourGoalFirstView">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
        <Image Source="consultant.png" Grid.Row="0" Grid.Column="0"></Image>
            <Label Style="{StaticResource DescriptionStyle}" Text="{extensions:Translate ImprovementAreasQuestion}" VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="1"></Label>
            <customView:GradientButton Text="{extensions:Translate CustomerService}" Style="{StaticResource SelectButtonStyle}" 
                                       Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
        <customView:GradientButton Text="{extensions:Translate SoftwareDevelopment}" Style="{StaticResource SelectButtonStyle}"
                                   Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
        <customView:GradientButton Text="{extensions:Translate SalesAndMarketing}" Style="{StaticResource SelectButtonStyle}"
                                   Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
        <customView:GradientButton Text="{extensions:Translate Hospitality}" Style="{StaticResource SelectButtonStyle}"
                                   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
            <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                <flex:FlexButton  Icon="arrow.png" WidthRequest="76"
                                             HeightRequest="76" 
                                            ForegroundColor="#ffffff"
                                            HighlightForegroundColor="#49516F"
                                            CornerRadius="30"
                                            BackgroundColor="#6279B8"
                                            HighlightBackgroundColor="#8EA4D2"
                                            AbsoluteLayout.LayoutFlags="PositionProportional"
                                            AbsoluteLayout.LayoutBounds="0.95,0.95,-1,-1"/>
        </AbsoluteLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>